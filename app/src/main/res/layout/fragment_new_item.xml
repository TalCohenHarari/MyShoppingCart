<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.newItem.NewItemFragment">


    <View
        android:id="@+id/newItem_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#59000000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/newItem_category_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:text="Category:"
                android:textColor="#FFFFFF"
                android:textSize="24sp"
                android:textStyle="bold|italic"
                app:layout_constraintBottom_toBottomOf="@+id/newItem_category_et"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/newItem_category_et"
                app:layout_constraintVertical_bias="0.0" />

            <EditText
                android:id="@+id/newItem_category_et"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:ems="10"
                android:inputType="textPersonName"
                android:textAlignment="viewEnd"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toEndOf="@+id/newItem_category_tv"
                app:layout_constraintTop_toBottomOf="@+id/newItem_name_et" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/newItem_save_btn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="100dp"
                android:layout_marginEnd="16dp"
                android:background="@drawable/button"
                android:text="שמור"
                android:textColor="@color/white"
                android:textSize="30sp"
                android:textStyle="bold|italic"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/newItem_name_tv" />

            <TextView
                android:id="@+id/newItem_name_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:text="NAME:"
                android:textColor="#FFFFFF"
                android:textSize="24sp"
                android:textStyle="bold|italic"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/newItem_galleryIcon_imgV" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/newItem_image_imgV"
                android:layout_width="278dp"
                android:layout_height="246dp"
                android:layout_marginStart="19dp"
                android:layout_marginTop="31dp"
                android:layout_marginEnd="19dp"
                android:src="@drawable/background2"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/newItem_witheLine2_tv" />

            <ImageView
                android:id="@+id/newItem_cameraIcon_imgV"
                android:layout_width="52dp"
                android:layout_height="47dp"
                android:layout_marginEnd="8dp"
                android:src="@drawable/custom_camera_icon"
                app:layout_constraintBottom_toBottomOf="@+id/newItem_galleryIcon_imgV"
                app:layout_constraintEnd_toStartOf="@+id/newItem_galleryIcon_imgV"
                app:layout_constraintTop_toTopOf="@+id/newItem_galleryIcon_imgV" />

            <TextView
                android:id="@+id/newItem_headLine_tv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="פריט חדש"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="24sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/newItem_witheLine_tv" />

            <TextView
                android:id="@+id/newItem_witheLine_tv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="#63FFFFFF"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/newItem_witheLine2_tv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="#63FFFFFF"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/newItem_headLine_tv" />

            <ImageView
                android:id="@+id/newItem_galleryIcon_imgV"
                android:layout_width="52dp"
                android:layout_height="47dp"
                android:layout_marginTop="24dp"
                android:layout_marginEnd="8dp"
                android:src="@drawable/custom_gallery_icon"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/newItem_image_imgV" />

            <EditText
                android:id="@+id/newItem_name_et"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:ems="10"
                android:inputType="textPersonName"
                android:textAlignment="viewEnd"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                app:layout_constraintBottom_toBottomOf="@+id/newItem_name_tv"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toEndOf="@+id/newItem_name_tv"
                app:layout_constraintTop_toTopOf="@+id/newItem_name_tv"
                app:layout_constraintVertical_bias="0.615" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/newItem_back_btn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="16dp"
                android:background="@drawable/button"
                android:text="הקודם"
                android:textColor="@color/white"
                android:textSize="30sp"
                android:textStyle="bold|italic"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/newItem_save_btn"
                app:layout_constraintStart_toStartOf="@+id/newItem_save_btn"
                app:layout_constraintTop_toBottomOf="@+id/newItem_save_btn" />

            <ProgressBar
                android:id="@+id/newItem_progressBar"
                style="?android:attr/progressBarStyle"
                android:layout_width="258dp"
                android:layout_height="210dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>