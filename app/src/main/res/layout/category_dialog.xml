<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="#FFFFFF">

    <TextView
        android:id="@+id/category_dialog_freezer"
        android:layout_width="0dp"
        android:layout_height="64dp"
        android:layout_marginTop="32dp"
        android:background="?attr/selectableItemBackground"
        android:gravity="center"
        android:text="מקרר ומקפיא"
        android:textColor="#000000"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/category_dialog_vegetables"
        android:layout_width="0dp"
        android:layout_height="64dp"
        android:background="?attr/selectableItemBackground"
        android:gravity="center"
        android:text="פירות וירקות"
        android:textColor="#000000"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="@+id/category_dialog_freezer"
        app:layout_constraintStart_toStartOf="@+id/category_dialog_freezer"
        app:layout_constraintTop_toBottomOf="@+id/category_dialog_freezer" />

    <TextView
        android:id="@+id/category_dialog_clean"
        android:layout_width="0dp"
        android:layout_height="64dp"
        android:background="?attr/selectableItemBackground"
        android:gravity="center"
        android:text="ניקיון"
        android:textColor="#000000"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="@+id/category_dialog_vegetables"
        app:layout_constraintStart_toStartOf="@+id/category_dialog_vegetables"
        app:layout_constraintTop_toBottomOf="@+id/category_dialog_vegetables" />

    <TextView
        android:id="@+id/category_dialog_cabinet"
        android:layout_width="0dp"
        android:layout_height="64dp"
        android:background="?attr/selectableItemBackground"
        android:gravity="center"
        android:text="לארונות"
        android:textColor="#000000"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="@+id/category_dialog_clean"
        app:layout_constraintStart_toStartOf="@+id/category_dialog_clean"
        app:layout_constraintTop_toBottomOf="@+id/category_dialog_clean" />

    <TextView
        android:id="@+id/textView14"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:background="#C3000000"
        android:gravity="center"
        android:text="בחר קטגוריה"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/category_dialog_freezer"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/divider2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:background="#85000000"
        app:layout_constraintBottom_toTopOf="@+id/category_dialog_vegetables"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <View
        android:id="@+id/divider4"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:background="#85000000"
        app:layout_constraintBottom_toTopOf="@+id/category_dialog_clean"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/category_dialog_vegetables" />

    <View
        android:id="@+id/divider3"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:background="#85000000"
        android:backgroundTint="@color/black"
        app:layout_constraintBottom_toTopOf="@+id/category_dialog_cabinet"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/category_dialog_clean" />
</androidx.constraintlayout.widget.ConstraintLayout>