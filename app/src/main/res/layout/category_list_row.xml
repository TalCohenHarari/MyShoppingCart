<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/category_MaterialcardView"
    android:layout_width="120dp"
    android:layout_height="75dp"
    android:layout_marginHorizontal="5dp"
    android:backgroundTint="@color/white"
    android:elevation="15dp"
    android:outlineAmbientShadowColor="@color/red"
    android:outlineSpotShadowColor="@color/red"
    app:cardCornerRadius="23dp"
    app:strokeColor="@color/myPink"
    app:strokeWidth="1.5dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/categoryRow_image_imgV"
            android:layout_width="35dp"
            android:layout_height="35dp"
            app:tint="@color/myPink"
            tools:src="@drawable/ic_freezer" />

        <TextView
            android:id="@+id/categoryRow_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/myPink"
            android:textStyle="bold"
            tools:text="No Name" />

    </LinearLayout>
</com.google.android.material.card.MaterialCardView>