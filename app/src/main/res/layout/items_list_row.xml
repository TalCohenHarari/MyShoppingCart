<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/itemsListrow_cardView"
    android:layout_width="155dp"
    android:layout_height="205dp"
    android:layout_marginTop="15dp"
    android:layout_marginEnd="15dp"
    android:layout_marginBottom="15dp"
    app:cardCornerRadius="30dp">


    <LinearLayout
        android:id="@+id/itemsListrow_linearLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#00FFFFFF"
        android:orientation="vertical">

        <com.google.android.material.card.MaterialCardView
            android:layout_width="120dp"
            android:layout_height="95dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:scaleType="center"
            app:cardBackgroundColor="#FFFFFF"
            app:cardCornerRadius="60dp">

            <ImageView
                android:id="@+id/itemsListrow_image_imgV"
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                android:background="#00FFFFFF"
                app:srcCompat="@drawable/chef" />
        </com.google.android.material.card.MaterialCardView>

        <ImageView
            android:id="@+id/itemsListrow_edit_icon_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="14dp"
            android:src="@drawable/edit_icon" />

        <TextView
            android:id="@+id/itemsListrow_Name_textView"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:background="#00FFFFFF"
            android:fontFamily="sans-serif"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold"
            tools:text="Untitled" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#00FFFFFF"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/itemsListrow_minus_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/minus_icon" />

            <TextView
                android:id="@+id/itemsListrow_number_tv"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginLeft="15dp"
                android:gravity="center"
                android:text="0"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/itemsListrow_plus_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:background="@drawable/add_icon" />
        </LinearLayout>


    </LinearLayout>
</androidx.cardview.widget.CardView>


