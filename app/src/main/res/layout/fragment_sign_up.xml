<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_bg"
    android:layoutDirection="ltr"
    tools:context=".ui.signUp.SignUpFragment">


    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#5E000000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/sign_up_email_address_et"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="32dp"
        android:background="@drawable/white_edit_text"
        android:ems="10"
        android:hint="כתובת אימייל"
        android:inputType="textEmailAddress"
        android:paddingEnd="35dp"
        android:textColorHint="#A6FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/view"
        app:layout_constraintTop_toBottomOf="@+id/textView13" />

    <EditText
        android:id="@+id/sign_up_password_et"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginTop="27dp"
        android:background="@drawable/white_edit_text"
        android:ems="10"
        android:hint="סיסמה"
        android:inputType="textEmailAddress"
        android:paddingEnd="35dp"
        android:textColorHint="#A6FFFFFF"
        app:layout_constraintEnd_toEndOf="@+id/sign_up_email_address_et"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/sign_up_email_address_et"
        app:layout_constraintTop_toBottomOf="@+id/sign_up_email_address_et" />

    <TextView
        android:id="@+id/textView13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="150dp"
        android:text="הרשמה"
        android:textColor="#FFFFFF"
        android:textSize="36sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/view" />

    <Button
        android:id="@+id/sign_up_enter_btn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"
        android:background="@drawable/button"
        android:text="הירשם"
        android:textColor="#000000"
        android:textSize="18sp"
        android:textStyle="bold"
        app:backgroundTint="#85FFFFFF"
        app:layout_constraintEnd_toEndOf="@+id/sign_up_password_et"
        app:layout_constraintStart_toStartOf="@+id/sign_up_password_et"
        app:layout_constraintTop_toBottomOf="@+id/sign_up_password_et" />

    <TextView
        android:id="@+id/sign_up_have_an_account_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="יש לך כבר חשבון?"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@+id/sign_up_enter_btn"
        app:layout_constraintStart_toStartOf="@+id/sign_up_enter_btn"
        app:layout_constraintTop_toBottomOf="@+id/sign_up_enter_btn" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:src="@drawable/security_icon"
        app:layout_constraintBottom_toBottomOf="@+id/sign_up_password_et"
        app:layout_constraintEnd_toEndOf="@+id/sign_up_password_et"
        app:layout_constraintTop_toTopOf="@+id/sign_up_password_et" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:src="@drawable/email_icon"
        app:layout_constraintBottom_toBottomOf="@+id/sign_up_email_address_et"
        app:layout_constraintEnd_toEndOf="@+id/sign_up_email_address_et"
        app:layout_constraintTop_toTopOf="@+id/sign_up_email_address_et" />
</androidx.constraintlayout.widget.ConstraintLayout>